{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "constants/*": ["./src/constants/*"],
      "pages/*": ["./src/pages/*"],
      "routes/*": ["./src/routes/*"],
      "layout/*": ["./src/layout/*"],
      "stores/*": ["./src/stores/*"],
      "styles/*": ["./src/styles/*"],
      "utils/*": ["./src/utils/*"],
      "components/*": ["./src/components/*"],
      "assets/*": ["./src/assets/*"],
      "locales/*": ["./src/locales/*"],
      "hooks/*": ["./src/hooks/*"],
      "apis/*": ["./src/apis/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
